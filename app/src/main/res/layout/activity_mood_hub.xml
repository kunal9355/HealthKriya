<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/mood_hub_bg"
    android:paddingTop="24dp"

    android:padding="16dp">

    <!-- Title -->
    <TextView
        android:id="@+id/txtTitle"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Mood Tracker"
        android:textColor="@color/health_text_primary"
        android:textSize="22sp"
        android:textStyle="bold"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintStart_toStartOf="parent"/>



    <!-- Calendar Card -->
    <com.google.android.material.card.MaterialCardView
        android:id="@+id/cardCalendar"
        android:layout_width="0dp"
        android:layout_height="180dp"
        android:layout_marginTop="16dp"

        android:gravity="center_vertical"
        app:cardBackgroundColor="@color/mood_hub_card_bg"
        app:cardCornerRadius="24dp"
        app:cardElevation="6dp"
        app:layout_constraintTop_toBottomOf="@id/txtTitle"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent">


        <TextView
            android:text="Select date and action"
            android:textSize="14sp"
            android:textColor="@color/mood_hub_hint_text"
            android:paddingLeft="12dp"
            android:layout_height="wrap_content"
            android:layout_width="match_parent"/>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:paddingTop="20dp"
            android:padding="16dp">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="August 2025"
                android:textColor="@color/health_text_primary"
                android:textSize="16sp"
                android:textStyle="bold"/>

            <HorizontalScrollView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:overScrollMode="never">

                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:layout_marginTop="12dp">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="19\nThu"
                        android:textColor="@color/health_text_primary"
                        android:gravity="center"
                        android:padding="12dp"
                        android:layout_marginEnd="8dp"
                        android:background="@drawable/bg_date_selected"/>

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="20\nFri"
                        android:textColor="@color/health_text_primary"
                        android:gravity="center"
                        android:padding="12dp"
                        android:layout_marginEnd="8dp"
                        android:background="@drawable/bg_date_normal"/>
                </LinearLayout>
            </HorizontalScrollView>
        </LinearLayout>
    </com.google.android.material.card.MaterialCardView>

    <!-- Options Card -->
    <com.google.android.material.card.MaterialCardView
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginTop="28dp"
        app:cardBackgroundColor="@color/mood_hub_card_bg"
        app:cardCornerRadius="28dp"
        app:cardElevation="8dp"
        app:layout_constraintTop_toBottomOf="@id/cardCalendar"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent">


        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            app:layout_constraintTop_toBottomOf="@id/cardCalendar"
            android:layout_marginTop="24dp">

            <include
                android:id="@+id/cardEntry"
                layout="@layout/item_mood_option_card"/>

            <include
                android:id="@+id/cardJournal"
                layout="@layout/item_mood_option_card"/>

            <include
                android:id="@+id/cardAnalytics"
                layout="@layout/item_mood_option_card"/>

        </LinearLayout>

    </com.google.android.material.card.MaterialCardView>

</androidx.constraintlayout.widget.ConstraintLayout>
