<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:id="@+id/homeScroll"
    android:background="@color/health_background"
    android:overScrollMode="never">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:paddingStart="20dp"
        android:paddingEnd="20dp"
        android:paddingBottom="20dp"
        android:paddingTop="32dp">

        <!-- ðŸ‘‹ Greeting -->
        <TextView
            android:id="@+id/txtGreeting"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Hi ðŸ‘‹"
            android:textSize="24sp"
            android:textStyle="bold"
            android:textColor="@color/health_text_primary"
            android:layout_marginBottom="24dp" />

        <!-- ðŸ”¥ ROW 1 : Emergency + Donate -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:weightSum="2"
            android:baselineAligned="false"
            android:layout_marginBottom="20dp">

            <include
                android:id="@+id/cardEmergency"
                layout="@layout/card_home_emergency"
                android:layout_width="0dp"
                android:layout_height="140dp"
                android:layout_weight="1"
                android:layout_marginEnd="8dp" />

            <include
                android:id="@+id/cardDonate"
                layout="@layout/card_home_donate"
                android:layout_width="0dp"
                android:layout_height="140dp"
                android:layout_weight="1"
                android:layout_marginStart="8dp" />
        </LinearLayout>

        <!-- ðŸ§˜ Mood Tracker -->
        <include
            android:id="@+id/cardMood"
            layout="@layout/card_home_mood"
            android:layout_width="match_parent"
            android:layout_height="130dp"
            android:layout_marginBottom="18dp" />

        <!-- ðŸ’Š Medicine Reminder -->
        <include
            android:id="@+id/cardMedicine"
            layout="@layout/card_home_medicine"
            android:layout_width="match_parent"
            android:layout_height="130dp"
            android:layout_marginBottom="18dp" />

        <!-- ðŸ”® Future cards yahin se niche add hote rahenge -->

    </LinearLayout>
</ScrollView>
