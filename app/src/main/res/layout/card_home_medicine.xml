<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="120dp"
    app:cardCornerRadius="24dp"
    app:cardElevation="8dp"
    android:foreground="?attr/selectableItemBackground"
    app:cardBackgroundColor="#1AFFFFFF">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:padding="18dp"
        android:orientation="horizontal"
        android:gravity="center_vertical">

        <ImageView
            android:id="@+id/imgMedicineIcon"
            android:layout_width="42dp"
            android:layout_height="42dp"
            android:src="@drawable/ic_pill"
            android:contentDescription="Medicine Icon"
            app:tint="@color/health_primary" />

        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:layout_marginStart="16dp"
            android:orientation="vertical">

            <TextView
                android:id="@+id/txtMedicineTitle"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Medicine Reminder"
                android:textSize="18sp"
                android:textStyle="bold"
                android:textColor="@color/health_text_primary" />

            <TextView
                android:id="@+id/txtMedicineSubtitle"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Never miss your dose"
                android:textSize="13sp"
                android:textColor="@color/health_text_secondary" />
        </LinearLayout>

    </LinearLayout>
</androidx.cardview.widget.CardView>