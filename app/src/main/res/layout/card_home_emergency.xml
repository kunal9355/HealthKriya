<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="140dp"
    app:cardCornerRadius="22dp"
    app:cardElevation="10dp"
    android:foreground="?attr/selectableItemBackground"
    app:cardBackgroundColor="@color/emergency_card_bg">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:padding="16dp"
        android:orientation="vertical"
        android:gravity="center_vertical">

        <ImageView
            android:id="@+id/imgEmergency"
            android:layout_width="36dp"
            android:layout_height="36dp"
            android:src="@drawable/ic_emergency"
            android:contentDescription="Emergency Icon"
            app:tint="@color/emergency_text" />

        <TextView
            android:id="@+id/txtEmergencyTitle"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Emergency"
            android:textSize="18sp"
            android:textStyle="bold"
            android:textColor="@color/emergency_text"
            android:layout_marginTop="10dp"/>

        <TextView
            android:id="@+id/txtEmergencySubtitle"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="SOS and Help"
            android:textSize="13sp"
            android:textColor="@color/emergency_subtext"/>

    </LinearLayout>
</androidx.cardview.widget.CardView>
