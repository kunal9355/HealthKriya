<com.google.android.material.card.MaterialCardView android:id="@+id/cardMoodEntry"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginTop="32dp"
    app:cardCornerRadius="24dp"
    app:cardElevation="10dp"
    app:cardUseCompatPadding="true"
    app:cardBackgroundColor="@color/health_t_secondary"
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:padding="20dp">

        <!-- Title -->
        <TextView
            android:id="@+id/txtMoodTitle"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Aaj ka mood kaisa hai?"
            android:textSize="18sp"
            android:textStyle="bold"
            android:textColor="@color/health_text_primary" />

        <!-- Emoji Row -->

        <LinearLayout
            android:id="@+id/emojiRow"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="20dp"
            android:gravity="center"
            android:orientation="horizontal">

            <ImageView
                android:id="@+id/emojiAngry"
                android:layout_width="48dp"
                android:layout_height="48dp"
                android:layout_margin="8dp"
                android:padding="6dp"
                android:background="@drawable/bg_emoji_normal"
                android:src="@drawable/ic_mood_angry"
                android:alpha="0.6"/>

            <ImageView
                android:id="@+id/emojiSad"
                android:layout_width="48dp"
                android:layout_height="48dp"
                android:layout_margin="8dp"
                android:src="@drawable/ic_mood_sad"
                android:background="@drawable/bg_emoji_normal"
                android:alpha="0.6"/>

            <ImageView
                android:id="@+id/emojiNeutral"
                android:layout_width="44dp"
                android:layout_height="44dp"
                android:layout_margin="8dp"
                android:src="@drawable/ic_mood_neutral"
                android:background="@drawable/bg_emoji_normal"
                android:alpha="0.6"/>

            <ImageView
                android:id="@+id/emojiHappy"
                android:layout_width="44dp"
                android:layout_height="44dp"
                android:layout_margin="8dp"
                android:src="@drawable/ic_mood_happy"
                android:background="@drawable/bg_emoji_normal"
                android:alpha="0.6"/>

            <ImageView
                android:id="@+id/emojiVeryHappy"
                android:layout_width="44dp"
                android:layout_height="44dp"
                android:layout_margin="8dp"
                android:src="@drawable/ic_mood_very_happy"
                android:background="@drawable/bg_emoji_normal"
                android:alpha="0.6"/>

        </LinearLayout>

        <!-- Note -->
        <EditText
            android:id="@+id/etNote"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="24dp"
            android:hint="Kuch likhna chahte ho? (optional)"
            android:backgroundTint="@color/health_primary" />

        <!-- Save Button -->
        <Button
            android:id="@+id/btnSaveMood"
            android:layout_width="match_parent"
            android:layout_height="52dp"
            android:layout_marginTop="28dp"
            android:text="Save Mood"
            android:enabled="false"
            android:backgroundTint="@color/health_primary" />

    </LinearLayout>

</com.google.android.material.card.MaterialCardView>
